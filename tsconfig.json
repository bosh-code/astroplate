{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "noImplicitAny": true,
    "target": "ESNext",
    "module": "ESNext",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "allowJs": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "jsx": "react",
    "isolatedModules": true,
    "incremental": true,
    "moduleResolution": "bundler",
    "verbatimModuleSyntax": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@/components/*": [
        "./src/layouts/components/*"
      ],
      "@/shortcodes/*": [
        "./src/layouts/shortcodes/*"
      ],
      "@/helpers/*": [
        "./src/layouts/helpers/*"
      ],
      "@/partials/*": [
        "./src/layouts/partials/*"
      ],
      "@/*": [
        "./src/*"
      ]
    },
    "plugins": [
      {
        "name": "@astrojs/ts-plugin"
      }
    ]
  },
  "include": [
    ".astro/types.d.ts",
    "src/**/*.{ts|tsx|astro}"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
